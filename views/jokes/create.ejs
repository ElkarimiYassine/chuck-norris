<%- include('../parts/header.ejs') %>
<title>Create Joke</title>
</head>
<body>
<%- include('../parts/navbar.ejs') %>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <div class="d-flex justify-content-center">
                <h4>Add new Joke</h4>
            </div>
            <hr>
            <% if (errors) { %>
                <%errors.forEach((err)=>{ %>
                    <div class="alert alert-danger">
                        <%= err.msg %>
                    </div>
                <% }) %>  
            <% } %>  
            <form action="/jokes/create" method="POST">
                <div class="mb-3">
                    <div class="form-group mb-2">
                        <label for="title" class="mb-2">Title :</label>
                        <input type="text" name="title" id="title" class="form-control">
                    </div>
                    <div class="form-group mb-2">
                        <label for="description" class="mb-2">Joke :</label>
                        <textarea name="joke" class="form-control" id="JokeInput"></textarea>
                    </div>
                    <div class="mt-3 d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary">Add Joke</button>
                    </div>
                </div>
            </form>
            <div class="mt-3 d-flex justify-content-center">
                <button class="btn btn-success" onclick="Generate()">Generate</button>
            </div>
        </div>
    </div>    
</div>   
<%- include('../parts/footer.ejs') %>